generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection {
  id              Int @id @default(autoincrement())
  user_provider   String
  mal_id          String
  user_email      String
  anime_image     String?
  anime_title     String?

  @@unique([user_provider,user_email,mal_id])
}

model Comment {
  id              Int @id @default(autoincrement())
  user_provider   String
  mal_id          String
  user_email      String
  username        String
  user_image      String
  comment         String
  anime_title     String?
}